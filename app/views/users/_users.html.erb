<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, {size: 50}) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <% if logged_in? %>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
